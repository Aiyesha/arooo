%nav.navbar.navbar-default{ :role => 'navigation' }
  .container
    .navbar-header
      %button.navbar-toggle{:type => 'button', :'data-toggle' => 'collapse', :'data-target' => '.navbar-ex1-collapse'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Double Union', root_path, :class => 'navbar-brand'
    .collapse.navbar-collapse.navbar-ex1-collapse
      %ul.nav.navbar-nav
        %li= link_to 'Blog', tumblr_posts_path
        %li= external_link_to 'Twitter', TWITTER_URL

      - if logged_in?
        %ul.nav.navbar-nav.pull-right
          %li.dropdown
            %a{ :href => '#', :class => 'dropdown-toggle', :'data-toggle' => 'dropdown' }
              = user_gravatar(current_user)
              = current_user.username
              <b class="caret"></b>
            %ul.dropdown-menu
              - if current_user.visitor?
                %li= link_to 'Apply', membership_path
              - elsif current_user.applicant?
                %li= link_to 'Application', new_application_path
              - elsif current_user.member_or_key_member?
                %li= link_to 'Edit profile', edit_admin_user_path(current_user)
                %li= link_to 'Member admin', admin_root_path
              %li.divider
              %li= link_to 'Sign out', logout_path
