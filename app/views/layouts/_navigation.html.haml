%nav.navbar.navbar-default{:role => 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle{:type => 'button', :'data-toggle' => 'collapse', :'data-target' => '.navbar-ex1-collapse'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Double Union', root_path, :class => 'navbar-brand'

    .collapse.navbar-collapse.navbar-ex1-collapse
      %ul.nav.navbar-nav
        %li= link_to 'Blog', tumblr_posts_path
        %li= external_link_to 'Twitter', TWITTER_URL
      - if logged_in? && !current_user.visitor?
        %ul.nav.navbar-nav.pull-right
          %li
            %span.non-link= "Hi, #{current_user.username}"
          - if current_user.member_or_key_member?
            %li= link_to 'Admin', admin_root_path
          %li= link_to 'Log out', logout_path
