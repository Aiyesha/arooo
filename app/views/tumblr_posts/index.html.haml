- if @recent_posts.any?
  %h3 Latest posts
  %ul.tumblr-recent-posts
    - @recent_posts.each do |post|
      %li
        = link_to post.display_title, tumblr_post_path(post)
        %small= pretty_timestamp(post.published_at)

  - if @posts.any?
    - @posts.each do |post|
      = render :partial => 'post', :locals => { :post => post }
    = paginate @posts
