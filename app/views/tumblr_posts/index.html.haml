.container
  .row
    - if @posts.any?
      - @posts.each do |post|
        = render :partial => 'post', :locals => { :post => post }
      = paginate @posts

    - if @posts_for_sidebar.any?
      %h3 Latest posts
      %ul.tumblr-recent-posts
        - @posts_for_sidebar.each do |post|
          %li
            = link_to post.display_title, tumblr_post_path(post)
            %small= "#{time_ago_in_words(post.published_at)} ago"
